# AI Slide Generator - Backend Configuration Template
# Copy this file to .env and fill in your values.

# ===========================
# LLM Model Configuration
# ===========================

# Reasoning LLM (For complex reasoning tasks like Planner, Researcher)
REASONING_MODEL=gemini-3-flash-preview

# Basic LLM (For simple tasks like Coordinator)
BASIC_MODEL=gemini-3-flash-preview

# Vision LLM (For image understanding/generation like Visualizer)
VL_MODEL=gemini-3-pro-image-preview

# High Reasoning LLM (For advanced reasoning)
HIGH_REASONING_MODEL=gemini-3-pro-preview

# ===========================
# Vertex AI Configuration
# ===========================
# These are required for Vertex AI connection.
# VERTEX_PROJECT_ID=your-gcp-project-id
# VERTEX_LOCATION=asia-northeast1

# ===========================
# External Services
# ===========================
# Path to Chrome instance for certain browser automation tasks
# CHROME_INSTANCE_PATH=
# Jina AI API Key (if applicable)
# JINA_API_KEY=
# Firebase Auth
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# ===========================
# Utils Configuration
# ===========================
GOOGLE_SEARCH_MAX_RESULTS=10
PPTX_RENDER_TIMEOUT=60

# ===========================
# Storage & Persistence
# ===========================
# Google Cloud Storage Bucket Name
# GCS_BUCKET_NAME=your-bucket-name
# PostgreSQL Database URI for LangGraph Checkpointing
# POSTGRES_DB_URI=postgresql://user:password@localhost:5432/dbname

# ===========================
# Limits & Concurrency
# ===========================
MAX_RETRIES=3
VISUALIZER_CONCURRENCY=5
RESEARCHER_CONCURRENCY=3
RECURSION_LIMIT_WORKFLOW=50
RECURSION_LIMIT_RESEARCHER=7
MAX_COORD_CACHE_SIZE=2

# ===========================
# Project Info
# ===========================
PROJECT_NAME=Spell
VERSION=0.1.0
DEBUG=False

# Response Template
RESPONSE_FORMAT="Role: {role}
Content: {content}"
